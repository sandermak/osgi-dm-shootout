<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
	<service id="dashboardService" interface="shootout.dashboard.api.Dashboard"
		ref="dashboard" />
	<bean id="dashboard" init-method="myActivate" destroy-method="myDeactivate" class="shootout.dashboard.DashboardImpl">
		<property name="sensors">
			<reference-list interface="shootout.blueprint.sensor.api.Sensor"></reference-list>
		</property>
		<property name="alerter">
			<reference interface="shootout.blueprint.alerter.api.Alerter"></reference>
		</property>
	</bean>
</blueprint>